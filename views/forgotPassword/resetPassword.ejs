<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Reset-password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        .error {
            color: red;
            display: flex;
        }
    </style>
</head>

<style>
    .reset-from-wrapper {
        display: flex;
        min-height: 100vh;
        align-items: center;
        justify-content: center;
        background-color: #f9f9f9;
    }

    .reset-from-wrapper::after {
        content: "";
        width: 200px;
        height: 200px;
        background: rgba(207, 232, 253, 0.3);
        border-radius: 50%;
        position: fixed;
        top: 0;
        right: -50px;
    }

    .reset-from-wrapper::before {
        content: "";
        width: 200px;
        height: 200px;
        background: rgba(207, 232, 253, 0.3);
        border-radius: 50%;
        position: fixed;
        top: -50px;
        right: 0;
    }

    .reset-from {
        width: 500px;
        border-color: white;
        background: #fff;
        padding: 30px;
        border-radius: 10px;
    }

    .reset-from h1 {
        font-size: 28px;
        font-weight: 500;
    }

    .reset-from p {
        font-size: 16px;
        font-weight: 400;
        color: rgba(0, 0, 0, 0.6);
    }

    .reset-from .form-control {
        box-shadow: none;
        border: 1px solid rgba(214, 214, 214, 0.90);
        padding: 15px 50px 15px 15px;
    }

    .reset-from .btn {
        color: #fff;
        font-size: 18px;
        font-weight: 600;
        border-radius: 50px;
        padding: 10px;
        background: #0D7A5F;
        box-shadow: 0px 0px 14px rgba(128, 222, 228, 0.5);
    }

    .password-wrapper {
        position: relative;
    }

    .password-wrapper .toggle-password {
        cursor: pointer;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 1em;
        color: var(--text-color);
    }
</style>

<body>
    <div class="reset-from-wrapper">
        <div class="reset-from text-center">
            <form method="post" id="forgot">
          
                <h1 class="mt-3 pb-3">Reset Your Password</h1>
               

                <% if(success != '' && success != undefined){ %>
                    <div class="alert alert-success" id="success" role="alert">
                        <%= success %>
                    </div>
                    <% } %>
                        <% if( error !='' ){ %>
                            <div class="alert alert-danger" id="error" role="alert">
                                <%= error %>
                            </div>
                            <% } %>
                                <% if(
                                    forgotPassRefKey.refKey==true) { %>

                                    <div class="mb-3 password-wrapper">
                                        <input type="password" name="newPassword" class="form-control"
                                            placeholder="New Password" id="password">
                                        <i class="toggle-password fa fa-fw fa-eye-slash" id="eye"></i>
                                    </div>
                                    <label class="error" id="password-error"></label>
                                    <div class="mb-3 password-wrapper">
                                        <input type="password" name="confirmPassword" class="form-control"
                                            placeholder="Confirm Password" id="confirmPassword">
                                        <i class="toggle-password fa fa-fw fa-eye-slash" id="eyes"></i>
                                    </div>
                                    <label class="error" id="password-error-another"></label>
                                    <button type="submit" class="btn w-100">Set new password</button>
            </form>
            <% } %>
                <% if((typeof success !="undefined" ) && success=='' && (typeof forgotPassRefKey !="undefined" ) &&
                    forgotPassRefKey.refKey==false){ %>
                    <h2 style="color: rgb(0, 0, 0);font-weight: 600;"> Your link
                        has been
                        expired
                    </h2>
                    <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>


    <!-- validation -->
    <!-- <script src="/admin/js/validation.js"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>


    <script>

        $("#error").show().delay(2500).fadeOut();

        // Password validation
        $(document).ready(function () {
            // Password validation
            // $.validator.addMethod("strongPassword", function (value) {
            //     return /^[A-Za-z0-9\d=!\-@._*]*$/.test(value) && /[a-z]/.test(value) && /\d/.test(value) && /[A-Z]/.test(value);
            // }, "The password must contain at least 1 number, at least 1 lower case letter, and at least 1 upper case letter");

            $("#forgot").validate({
                rules: {
                    newPassword: {
                        required: true,
                        // strongPassword: true
                    },
                    confirmPassword: {
                        required: true,
                        equalTo: "#password"
                    }
                },
                
                messages: {
                    newPassword: {
                        required: "New password is required"
                    },
                    confirmPassword: {
                        required: "Confirm password is required",
                        equalTo: "New password and Confirm password does not match"
                    }
                },
                errorLabelContainer: "#password-error",
                
                submitHandler: function (form) {
                    form.submit();
                }
            });

            // Toggle password visibility
            $(".toggle-password").click(function () {
                var passwordInput = $(this).siblings("input[type='password']");
                var type = passwordInput.attr("type");
                if (type === "password") {
                    passwordInput.attr("type", "text");
                } else {
                    passwordInput.attr("type", "password");
                }
            });
        });






        $(function () {

            $('#eye').click(function () {

                if ($(this).hasClass('fa-eye-slash')) {

                    $(this).removeClass('fa-eye-slash');

                    $(this).addClass('fa-eye');

                    $('#password').attr('type', 'text');

                } else {

                    $(this).removeClass('fa-eye');

                    $(this).addClass('fa-eye-slash');

                    $('#password').attr('type', 'password');
                }
            });
        });
        $(function () {

            $('#eyes').click(function () {

                if ($(this).hasClass('fa-eye-slash')) {

                    $(this).removeClass('fa-eye-slash');

                    $(this).addClass('fa-eye');

                    $('#passwords').attr('type', 'text');

                } else {

                    $(this).removeClass('fa-eye');

                    $(this).addClass('fa-eye-slash');

                    $('#passwords').attr('type', 'password');
                }
            });
        });

        // $("#fm_regis").validate({
        //     rules: {
        //         name: {
        //             required: true,
        //         },
        //     },
        //     errorLabelContainer: "#password-error",
        //     // More of your code
        // })
    </script>
</body>

</html>